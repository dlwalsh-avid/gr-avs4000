<?xml version="1.0"?>
<block>
    <name>Avs4000RX</name>
    <key>avs4000_avs4000rx</key>
    <category>[AVS4000]</category>
  <import>import avs4000</import>
  <make>avs4000.avs4000rx($host, $dn,
                          $rate, $rxFreq, $rxRFBW,
                          $rfGain, $gainMode,
                          $ddcFreq, $ddcOutGain,
                          $startMode, $refMaster,
                          $tbSrc,$refMode,$ppsSel,$sysSync)</make>
  <callback>SetRxFreq($rxFreq)</callback>
  <callback>SetDDCFreq($ddcFreq)</callback>
  <callback>SetDDCOutGain($ddcOutGain)</callback>
  <callback>SetRxGain($rfGain)</callback>
  <param>
          <name>Host</name>
          <key>host</key>
          <value>"localhost"</value>
          <type>string</type>
  </param>
  <param>
          <name>Device Number</name>
          <key>dn</key>
          <value>1</value>
          <type>int</type>
  </param>
  <param>
          <name>Sample Rate</name>
          <key>rate</key>
          <value>samp_rate</value>
          <type>real</type>
  </param>
  <param>
          <name>RX Frequency</name>
          <key>rxFreq</key>
          <value>rx_freq</value>
          <type>real</type>
  </param>
  <param>
          <name>RX RF Bandwidth</name>
          <key>rxRFBW</key>
          <value>0</value>
          <type>real</type>
  </param>
  <param>
          <name>RF Gain</name>
          <key>rfGain</key>
          <value>50</value>
          <type>real</type>
  </param>
  <param>
          <name>Gain Mode</name>
          <key>gainMode</key>
          <value>SlowAGC</value>
          <type>enum</type>
          <option>
            <name>Slow Attack AGC</name>
            <key>"SlowAGC"</key>
          </option>
          <option>
            <name>Fast Attack AGC</name>
            <key>"FastAGC"</key>
          </option>
          <option>
            <name>Hybrid AGC</name>
            <key>"HybridAGC"</key>
          </option>
          <option>
            <name>Manual</name>
            <key>"Manual"</key>
          </option>
  </param>
  <param>
          <name>DDC Frequency</name>
          <key>ddcFreq</key>
          <value>ddc_freq</value>
          <type>real</type>
  </param>
  <param>
          <name>DDC Out Gain</name>
          <key>ddcOutGain</key>
          <value>ddc_ogain</value>
          <type>real</type>
  </param>
  <param>
          <name>Start Mode</name>
          <key>startMode</key>
          <value>Immediate</value>
          <type>enum</type>
          <option>
            <name>Immediate</name>
            <key>"Immediate"</key>
          </option>
          <option>
            <name>On PPS</name>
            <key>"OnPPS"</key>
          </option>
  </param>
  <param>
          <name>Ref Master</name>
          <key>refMaster</key>
          <value>Disable</value>
          <type>enum</type>
          <option>
            <name>Disable</name>
            <key>False</key>
          </option>
          <option>
            <name>Enable</name>
            <key>True</key>
          </option>
  </param>
  <param>
          <name>Ref Mode</name>
          <key>refMode</key>
          <value>Internal</value>
          <type>enum</type>
          <hide>
          #if $refMaster()=='True'
            part
          #else
            all
          #end if
          </hide>
          <option>
            <name>Internal</name>
            <key>"Internal"</key>
          </option>
          <option>
            <name>Internal Static</name>
            <key>"InternalStatic"</key>
          </option>
          <option>
            <name>External</name>
            <key>"External"</key>
          </option>
          <option>
            <name>GPSDO</name>
            <key>"GPSDO"</key>
          </option>
          <option>
            <name>PPS</name>
            <key>"PPS"</key>
          </option>
  </param>
  <param>
          <name>PPS Select</name>
          <key>ppsSel</key>
          <value>Internal</value>
          <type>enum</type>
          <hide>
          #if $refMaster()=='True'
            part
          #else
            all
          #end if
          </hide>
          <option>
            <name>Internal</name>
            <key>"internal"</key>
          </option>
          <option>
            <name>External</name>
            <key>"External"</key>
          </option>
          <option>
            <name>GPS</name>
            <key>"GPS"</key>
          </option>
  </param>
  <param>
          <name>Timebase Src</name>
          <key>tbSrc</key>
          <value>Host</value>
          <type>enum</type>
          <hide>
          #if $refMaster()=='True'
            part
          #else
            all
          #end if
          </hide>
          <option>
            <name>Host</name>
            <key>"host"</key>
          </option>
          <option>
            <name>GPS</name>
            <key>"gps"</key>
          </option>
  </param>
  <param>
          <name>System Sync</name>
          <key>sysSync</key>
          <value>Disable</value>
          <type>enum</type>
          <hide>
          #if $refMaster()=='True'
            part
          #else
            all
          #end if
          </hide>
          <option>
            <name>Disable</name>
            <key>False</key>
          </option>
          <option>
            <name>Enable</name>
            <key>True</key>
          </option>
  </param>
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
